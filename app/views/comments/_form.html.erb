<%= form_for @comm do |f| %>
    <%= f.hidden_field :movie_id, :value => @movie.id %>
    <div class= "input-field col s6">
        <%= f.label :comment, 'Comment'%>
        <div class="input-field col s6">
        <%= f.label :rate, 'rate: 5/' %>
        <%= f.select :rate, ["1","2","3","4","5"] %>
    </div>
        <br>
        <%= f.text_area :comment%>
    </div>


   
    <%= f.submit "Submit", :class => "btn waves-effect waves-light" %>

  <% end %>



